# Supabase Configuration
# Get these from your Supabase project settings: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application Configuration
# Base URL for your application
# Local development: http://localhost:3000 or http://localhost:3001
# Production: https://linkist.ai or your custom domain
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Linkist NFC
NEXT_PUBLIC_BASE_DOMAIN=linkist.com

# Email Configuration
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=Linkist <noreply@linkist.ai>
EMAIL_REPLY_TO=support@linkist.ai

# Gmail SMTP Configuration (Alternative to Resend)
GMAIL_FROM=Linkist <chatgptnotes@gmail.com>
GMAIL_APP_PASSWORD=your_gmail_app_password_here
GMAIL_REPLY_TO=chatgptnotes@gmail.com

# Email Deliverability Configuration
# These settings should be configured in your DNS provider

# SPF Record (add to DNS as TXT record for your domain):
# v=spf1 include:_spf.resend.com ~all

# DKIM (configured automatically by Resend when using custom domain)
# Public key will be provided by Resend for DNS TXT record

# DMARC Record (add to DNS as TXT record for _dmarc.yourdomain.com):
# v=DMARC1; p=quarantine; ruf=mailto:dmarc@linkist.ai; rua=mailto:dmarc@linkist.ai; fo=1

# Storage Configuration
NEXT_PUBLIC_STORAGE_BUCKET=linkist-assets

# Feature Flags
NEXT_PUBLIC_ENABLE_STRIPE_TEST_MODE=true
NEXT_PUBLIC_ENABLE_FOUNDER_MEMBER=true

# Admin Configuration
ADMIN_EMAIL=admin@linkist.ai
ADMIN_PASSWORD=secure_admin_password_change_this

# GDPR Compliance Configuration
GDPR_ADMIN_EMAIL=admin@linkist.ai
DATA_RETENTION_DAYS=2555  # 7 years default for legal compliance

# Security
SESSION_SECRET=your-session-secret-here
ENCRYPTION_KEY=your-encryption-key-here